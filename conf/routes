# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           		controllers.HomeController.index
GET     /index.html		                    controllers.Default.redirect(to = "/")
GET     /index			                    controllers.Default.redirect(to = "/")
GET     /home			                    controllers.Default.redirect(to = "/")


GET     /hotels                        		controllers.HomeController.resorts
GET     /liste                        		controllers.HomeController.gifts
GET     /jourj                        		controllers.HomeController.dday
GET     /contact                        		controllers.HomeController.contact


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
